<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Entrace.Academics">

    <include
        android:id="@+id/toolbar"
        android:elevation="15dp"
        layout="@layout/cutom_toolbar"/>

    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingTop="10dp"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="20dp"
                android:elevation="50dp"
                app:cardCornerRadius="20dp">

                <TextView
                    android:id="@+id/entranceExam"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:fontFamily="@font/alegreya_sc"
                    android:gravity="center"
                    android:background="@drawable/jee"
                    android:text="@string/entrance_exam"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded,RtlSymmetry" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="20dp"
                android:elevation="50dp"
                app:cardCornerRadius="20dp">

                <TextView
                    android:id="@+id/higherEducation"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:fontFamily="@font/alegreya_sc"
                    android:gravity="center"
                    android:background="@drawable/higher"
                    android:paddingBottom="5dp"
                    android:text="@string/higher_education"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded,RtlSymmetry" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>