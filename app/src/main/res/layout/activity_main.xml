<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <include
        android:id="@+id/toolbar"
        layout="@layout/cutom_toolbar"
        android:elevation="15dp" />

    <RelativeLayout
        android:id="@+id/mainContainer"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginBottom="20dp"
                    android:elevation="50dp"
                    app:cardCornerRadius="20dp">

                    <TextView
                        android:id="@+id/entranceExam"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/academics"
                        android:fontFamily="@font/alegreya_sc"
                        android:gravity="center"
                        android:text="@string/academics"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginBottom="20dp"
                    android:elevation="50dp"
                    app:cardCornerRadius="20dp">

                    <TextView
                        android:id="@+id/socialMedia"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/social"
                        android:fontFamily="@font/alegreya_sc"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:text="@string/social_media"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginBottom="20dp"
                    android:elevation="50dp"
                    app:cardCornerRadius="20dp">

                    <TextView
                        android:id="@+id/news"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/news"
                        android:fontFamily="@font/alegreya_sc"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:text="@string/news"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginBottom="20dp"
                    android:elevation="50dp"
                    app:cardCornerRadius="20dp">

                    <TextView
                        android:id="@+id/sports"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/sportsbg"
                        android:fontFamily="@font/alegreya_sc"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:text="@string/sports"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="#00E489"
            app:srcCompat="@android:drawable/ic_dialog_email"
            tools:ignore="SpeakableTextPresentCheck" />
    </RelativeLayout>
</RelativeLayout>